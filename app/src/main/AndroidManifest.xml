<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:enableOnBackInvokedCallback="true"
        android:theme="@style/Theme.PocketStore"
        tools:targetApi="tiramisu">
        <activity
            android:name=".pages.FavoritosActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".pages.CarritoActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".pages.ImageActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".pages.ProfileActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".pages.CategoriasActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".pages.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".pages.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".pages.RegistroActivity"
            android:exported="false" />
        <activity
            android:name=".pages.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".pages.InfoActivity"
            android:exported="false" />
        <activity
            android:name=".pages.MemuActivity"
            android:exported="true" />
        <activity
            android:name=".pages.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.ServiciosActivity"
            android:exported="false" />
        <activity
            android:name=".pages.KikiActivity"
            android:exported="false" />
        <activity
            android:name=".pages.ArtActivity"
            android:exported="false" />
        <activity
            android:name=".pages.TabletsActivity"
            android:exported="true" />
        <activity
            android:name=".pages.AccActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".pages.StartActivityUno"
            android:exported="true" />
        <activity
            android:name=".pages.NotFoundActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            tools:ignore="IntentFilterExportedReceiver" />
        <activity
            android:name=".pages.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".order.OrderActivity"
            android:label="@string/order_title" />
        <activity android:name=".pages.PhoneActivity" />

        <service
            android:name=".fcm.FCMService"
            android:exported="false"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/notification_channel_id_default" />
    </application>

</manifest>